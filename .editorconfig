# EditorConfig helps maintain consistent coding styles across editors and IDEs
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown and JSON: don't trim trailing whitespace (preserves formatting)
[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2
trim_trailing_whitespace = false

# YAML
[*.yml]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

# Windows batch files
[*.bat]
end_of_line = crlf
